<div class="container login-container ">
  <div class=" input-container z-depth-3">
    <div class="container">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
      <form action="/users/login" method="POST">
        <div class="input_field">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="input_field" placeholder="Enter Email" />
        </div>
        <div class="input_field">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="input_field" placeholder="Enter Password" />
        </div>
        <div class="container login-button left">
          <a type="submit" class="waves-effect waves-light btn btn-large red lighten-2">Login</a>
          <p class="lead mt-4">
            No Account? <a href="/users/register">Register</a>
          </p>
        </div>
      </form>
    </div>
  </div>
</div>
