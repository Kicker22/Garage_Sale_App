<div class="container form-container z-depth-3 register-form" >
  <div class="container ">

    <h1 class="text-center mb-3 regi-header">
      <i class="fas fa-user-plus regi-header"></i> Register
    </h1>
    <% include ./partials/messages %>
  
    <div class="row">
      <form class="col s12" action="/users/register" method="POST">
        <div class="row">
          <div class="input-field col s6">
            <input placeholder="Placeholder" id="input_text" type="text" name="name" class="validate"
              value="<%= typeof name != 'undefined' ? name : '' %>" />
            <label for="input_text">First Name</label>
          </div>
          <!-- <div class="input-field col s6">
            <input id="last_name" type="text" class="validate input-field" value="<%= typeof email != 'undefined' ? email : '' %>" />
            <label for="last_name">Last Name</label>
          </div> -->
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="password" type="password" name="password" class="validate"
              value="<%= typeof password != 'undefined' ? password : '' %>">
            <label for="password">Password</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class=" validate input-field" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <input id="email" type="email" class="validate" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
            <label for="email">Email</label>
          </div>
        </div>
        <div class="container register-button left">
          <a type="submit" class="waves-effect waves-light btn btn-large red lighten-2">
              Register
          </a>
          <p class="">Have An Account? <a href="/users/login">Login</a></p>
        </div>
  
      </form>
    </div>
  </div>
</div>
